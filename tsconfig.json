{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["DOM", "DOM.iterable", "ESNext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@assets/*": ["./assets/*"],
      "@contentlayer": ["./.contentlayer/generated"],
      "@prisma": ["./prisma/ts"],
      "@src/components": ["./src/components"],
      "@src/hooks": ["./src/hooks"],
      "@src/lib": ["./src/lib"],
      "@src/types": ["./src/types"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES6"
  },
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
